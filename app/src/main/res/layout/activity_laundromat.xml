<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_laundromat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs4518.laundrybuddy.LaundromatActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="Test Name"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/textView"
            android:textAlignment="center" />

        <TextView
            android:text="Test Address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView2"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:text="Number of Washers Available:"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:id="@+id/textView3" />

            <TextView
                android:text="Number of Driers Available:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:layout_weight="488.25" />
        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchMode="columnWidth"
            android:id="@+id/GridView"
            android:numColumns="2" />

    </LinearLayout>
</RelativeLayout>
