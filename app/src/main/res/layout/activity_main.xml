<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        tools:context="cs4518.laundrybuddy.Main" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/timer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timer_button"
            android:onClick="goToTimer"
            android:layout_weight="1" />

        <Button
            android:text="@string/Instr_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Instr_button"
            android:onClick="goToInstr"
            android:layout_weight="0.68" />

        <Button
            android:text="Laundromat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/laundromat_test_button"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>

